<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:text="Profile Settings"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageEditFoto"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:textSize="16dp"
            android:fontFamily="@font/rubik_regular"
            android:id="@+id/tvEditEmailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="@font/rubik_regular"
            android:textSize="16dp"
            android:id="@+id/tvEditNamaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtEditKotaAsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kota Asal"/>
        <EditText
            android:id="@+id/edtEditFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Foto URL"/>
        <EditText
            android:id="@+id/edtEditNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="No HP"/>
        <EditText
            android:id="@+id/edtEditUmur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Umur"/>
        <Button
            android:id="@+id/btnUpdateProfile"
            android:text="Update"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>